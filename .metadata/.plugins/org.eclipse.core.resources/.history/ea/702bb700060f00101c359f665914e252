package com.lms.attendance.service;

import java.util.List;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.messaging.simp.SimpMessagingTemplate;
import org.springframework.stereotype.Service;

import com.lms.attendance.model.AlarmList;
import com.lms.attendance.model.CourseRegistrationCount;
import com.lms.attendance.model.WarningMessage;
import com.lms.attendance.repository.AlarmListMapper;
import com.lms.attendance.repository.CourseMapper;

@Service
public class WebSocketService {

    @Autowired
    private SimpMessagingTemplate messagingTemplate;

    @Autowired
    private CourseMapper courseMapper;
    
    @Autowired
    private AlarmListMapper alarmListMapper; 

    // ì‹ ì²­ ì¸ì› ì „ì²´ë¥¼ ë‹¤ì‹œ ì¡°íšŒí•´ì„œ ë¸Œë¡œë“œìºìŠ¤íŠ¸
    public void broadcastUpdatedCounts() {
        List<CourseRegistrationCount> counts = courseMapper.getPreRegistrationCounts();
        messagingTemplate.convertAndSend("/topic/registrationCounts", counts);
    }
    
    // âœ… ë³¸ ìˆ˜ê°•ì‹ ì²­ ì¸ì› ë¸Œë¡œë“œìºìŠ¤íŠ¸
    public void broadcastFinalCounts() {
        List<CourseRegistrationCount> counts = courseMapper.getFinalRegistrationCounts();
        messagingTemplate.convertAndSend("/topic/finalCounts", counts);
    }
    
 // Fí•™ì  ì•Œë¦¼ ì „ì†¡ ë° DB ì €ì¥
    public void sendFGradeWarning(String studentId, String content, int classId) {
        // ê²½ê³  ë©”ì‹œì§€ ìƒì„±
        WarningMessage message = new WarningMessage("âš ï¸ Fí•™ì  ê²½ê³ ", content);

        // 1. ì‹¤ì‹œê°„ WebSocket ì „ì†¡ (í•™ìƒì—ê²Œ)
        messagingTemplate.convertAndSendToUser(
            studentId,
            "/topic/alerts",  // ì‚¬ìš©ìë³„ë¡œ WebSocket ì•Œë¦¼ ì „ì†¡
            message
            
            System.out.println("âœ… WebSocket ì•Œë¦¼ ì „ì†¡ ì™„ë£Œ: " + message.getTitle());
        );

        // 2. DB ì €ì¥ (ë¡œê·¸ì¸ ì•ˆ í•´ìˆì–´ë„ ë³¼ ìˆ˜ ìˆê²Œ)
        AlarmList alarm = new AlarmList();
        alarm.setUserId(studentId);  // ì‚¬ìš©ì ID (í•™ìƒ)
        alarm.setClassId(classId);   // ìˆ˜ì—… ID
        alarm.setType("WARNING");    // ê²½ê³  íƒ€ì…
        alarm.setTitle(message.getTitle()); // ê²½ê³  ì œëª©
        alarm.setCreatedAt(new java.sql.Timestamp(System.currentTimeMillis()).toString()); // ìƒì„± ì¼ì‹œ
        alarm.setIsRead(false);  // ì´ˆê¸° ê°’ì€ ì½ì§€ ì•Šì€ ìƒíƒœ

        alarmListMapper.insertAlarm(alarm); // ì•Œë¦¼ DBì— ì €ì¥

        // 3. êµìˆ˜ìì—ê²Œë„ ì•Œë¦¼ ì „ì†¡
        String professorId = courseMapper.findProfessorIdByStudentId(studentId);  // í•™ìƒ IDë¡œ êµìˆ˜ ID ì¡°íšŒ
        if (professorId != null) {
            messagingTemplate.convertAndSendToUser(
                professorId,
                "/topic/alerts",
                new WarningMessage("ğŸ“¢ ì¶œì„ ê²½ê³  ì•Œë¦¼", "í•™ìƒ " + studentId + "ì˜ ì¶œê²° ìƒíƒœê°€ ê¸°ì¤€ì¹˜ë¥¼ ì´ˆê³¼í–ˆìŠµë‹ˆë‹¤.")
            );

            // êµìˆ˜ì ì•Œë¦¼ DBì— ì €ì¥
            alarm.setUserId(professorId);  // êµìˆ˜ IDë¡œ ë³€ê²½
            alarm.setTitle("í•™ìƒ " + studentId + " ì¶œì„ ê²½ê³ "); // êµìˆ˜ìì—ê²Œ ë³´ë‚¼ ì œëª©
            alarmListMapper.insertAlarm(alarm);  // êµìˆ˜ì ì•Œë¦¼ ì €ì¥
        }
    }

}
